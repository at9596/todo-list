<h1>Task List</h1>
<%= link_to 'New Task', new_task_path, class: "btn btn-primary" %>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Priority</th>
      <th>Due Date</th>
      <th>Status</th>
      <th>Progress</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <div id="tasks">
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.priority %></td>
        <td><%= task.due_date %></td>
        <td id="task_<%= task.id %>"> <p>Status: <span class="badge bg-<%= status_color(task.status) %>"><%= task.status.titleize %></span></p></td>
        <td>
          <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: <%= task.status == "Completed" ? 100 : task.progress %>%;" aria-valuenow="<%= task.status == "Completed" ? 100 : task.progress %>" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </td>
        <td>
          <%= link_to 'Edit', edit_task_path(task), class: "btn btn-warning btn-sm" %>
          <br><%= button_to 'Delete', task, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>

        </td>
      </tr>
    <% end %>
    </div>
  </tbody>
</table>